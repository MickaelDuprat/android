        <EditText
            android:id="@+id/ajoutCoordonneesGPSArriveeSiTransport"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:layout_below="@+id/nomCoordonneesGPSArriveeSiTransport"
            android:inputType="textNoSuggestions"/>

        <TextView
            android:id="@+id/nomTypeDeTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

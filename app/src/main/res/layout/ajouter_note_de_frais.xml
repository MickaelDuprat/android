            android:textSize="25dp"
            android:layout_below="@+id/ajoutTypeDeTransport"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/ajoutDistanceSiTransport"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:layout_below="@+id/nomDistanceSiTransport"
            android:inputType="textNoSuggestions"/>

        <TextView
        android:id="@+id/nomLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Login :"
        android:textSize="25dp"
        android:layout_below="@+id/ajoutDistanceSiTransport"
        android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/ajoutLogin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:layout_below="@+id/nomLogin"
            android:inputType="textNoSuggestions"/>

        <TextView
            android:id="@+id/nomIdClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IdClient :"
            android:textSize="25dp"
            android:layout_below="@+id/ajoutLogin"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/ajoutIdClient"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:layout_below="@+id/nomIdClient"
            android:inputType="textNoSuggestions"/>


        <Button
            android:id="@+id/ajouterNDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ajoutIdClient"
            android:layout_centerHorizontal="true"

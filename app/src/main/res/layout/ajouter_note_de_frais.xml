            android:inputType="textNoSuggestions"/>


        <TextView
            android:id="@+id/nomCoordonneesGPSArriveeSiTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CoordonneesGPSArriveeSiTransport :"
            android:textSize="25dp"
            android:layout_below="@+id/ajoutCoordonneesGPSDepartSiTransport"
